{
	"name": "systemjs-babel-es6-vue",
	"version": "1.0.4",
	"description": "Vue with alias & ES modules but without bundlers Webpack/Rollup/ESbuild",
	"keywords": [
		"babel",
		"nobundle",
		"systemjs",
		"es6 modules",
		"vue",
		"jest",
		"esm",
		"alias"
	],
	"repository": {
		"type": "git",
		"url": "git://github.com/viT-1/systemjs-babel-es6-vue.git"
	},
	"scripts": {
		"linth": "linthtml ./src/**/*.htmXXX",
		"lint": "eslint **/*.js",
		"imaps": "node -r esm ./map-packages.js",
		"copyfiles": "rm -rf dist && cpx ./src/index.html ./dist && npm run imaps",
		"resolve-alias": "set NODE_ENV=envEsm&&babel src --out-dir dist --ignore **/*.spec.js --config-file ./resolve-alias-babel.config.json",
		"sys": "babel --plugins @babel/plugin-transform-modules-systemjs .dist/script.js",
		"build": "npm run copyfiles && npm run resolve-alias",
		"test": "set NODE_ENV=envJest&&node -r esm ./node_modules/jest/bin/jest.js --runInBand --no-cache",
		"clj": "jest --clearCache",
		"www": "node -r esm ./express/serve-static.js"
	},
	"dependencies": {
		"@tokey/css-selector-parser": "0.5.1",
		"esm": "3.2.25",
		"express": "4.17.2",
		"mustache": "4.2.0",
		"vue": "2.6.14"
	},
	"devDependencies": {
		"@babel/cli": "7.16.8",
		"@babel/core": "7.16.7",
		"@babel/preset-env": "7.16.8",
		"@snowpack/babel-plugin-package-import": "1.1.6",
		"babel-plugin-add-import-extension": "1.6.0",
		"babel-plugin-replace-import-extension": "1.1.2",
		"babel-plugin-tsconfig-paths-module-resolver": "1.0.3",
		"babel-plugin-transform-html-import-to-string": "2.0.0",
		"cpx2": "4.1.2",
		"dom-by-selector": "1.1.6",
		"eslint": "^7.32.0",
		"eslint-config-airbnb-base": "15.0.0",
		"eslint-plugin-import": "2.25.3",
		"eslint-plugin-jest": "25.3.4",
		"eslint-plugin-jest-formatting": "3.1.0",
		"eslint-plugin-vue": "8.3.0",
		"eslint-import-resolver-node": "0.3.6",
		"eslint-import-resolver-typescript": "2.5.0",
		"@linthtml/linthtml": "0.8.4",
		"@linthtml/linthtml-config-recommended": "0.1.0",
		"@jest/globals": "27.4.6",
		"jest": "27.4.7",
		"@vue/test-utils": "1.3.0",
		"vue-template-compiler": "2.6.14"
	},
	"jest": {
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**/*.js",
			"!**/*.spec.js",
			"!**/*.config.js",
			"!**/index.js"
		],
		"testEnvironment": "jsdom",
		"testMatch": [
			"<rootDir>/src/**/*.spec.js"
		],
		"testPathIgnorePatterns": [
			"/!greeter-h/"
		],
		"silent": true,
		"verbose": false
	}
}
